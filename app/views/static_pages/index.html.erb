</head>

<body id="page-top">

    <style type="text/css">
        body, p, h2, h3, h4, li, input {
            font-family: helvetica !important;
        }

        .email-input {
            width: inherit !important;
            display: initial;
            border: 2px solid #FDC842;
        }
        .btn-email-submit:hover {
            background-color: #B63059;
        }

        .btn-email-submit {
            background-color: #B63059;
        }
        @media screen and (min-width: 601px) {
            .contact-image {
                background-size: 100% 100% !important;
                
                padding:170px 0;
            }

            .bottom-form {
                text-align: left;
            }

            .langButton {
                margin-top: 17px;
                margin-left: 20px;
            }
        }

        @media screen and (max-width: 600px) {
            .contact-image {
                padding: 50px 0 !important;
                background-size: 100% 100% !important;
            }
            .bottom-form {
                margin-left: 0px !important;
            }
            .center-sm {
                text-align: center;
            }

            .langButton {
                float: left !important;
                margin-left: 15px;
            }
        }
    </style>
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top">Datlas</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a class="page-scroll" href="#download"><%= t('about_us') %></a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#features"><%= t('features') %></a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#contact"><%= t('contact') %></a>
                    </li>
                    <% if session[:locale] == 'en' %>
                        <%= link_to set_language_turkish_path do %>
                            <li class="pull-right langButton"><span class="lang-sm" lang="tr"></span> TR</li>
                        <% end %>
                    <% else %>
                        <%= link_to set_language_english_path do %>
                            <li class="pull-right langButton"><span class="lang-sm" lang="en"></span><span class="langLabel"> EN</span></li>
                        <% end %>
                    <% end %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <header>
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="header-content">
                        <div class="header-content-inner" style="position:relative;">
                            <h1>
                              <% if flash[:notice] %>
                                  <% flash.each do |name, msg| -%>
                                      <div style="color: #FDCB4E" id="flash">
                                        <%= content_tag :div, msg, class: 'text-center' %>
                                      </div>
                                  <% end -%>
                              <% end %>
                            </h1>
                            <h1 class="text-center" style="font-weight: bold;">DATLAS</h1>
                            <h2 class="text-center"><%= t('reporting_time') %></h2>
                            <h3 class="text-center"><%= t('general_features') %></h3>
                            <div class="text-center">
                                <a href="#download" class="btn btn-outline btn-xl page-scroll"><%= t('more') %></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="download" class="download bg-primary text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="section-heading"><%= t('what_is') %></h2>
                    <h3><%= t('expl_1') %></h3>
                    <h3><%= t('expl_2') %></h3>
                    <h3><%= t('expl_3') %></h3>
                    <h4 style="color: white; margin-top: 100px;"><%= t('email_expl') %></h4>
                    <%= form_for @newsletter, url: create_newsletter_path, :html => {:multipart => true} do |f| %>
                        <div class="form col-md-offset-2 col-md-9 col-xs-12 text-center">
                          <%= f.email_field :email, class: 'form-control email-input', placeholder: '', required: true %>
                          <%= f.submit 'Gönder', class: 'btn btn-outline btn-bg btn-email-submit' %>
                        </div>
                        <br/>
                    <% end %>
                    <h1>
                      <% if flash[:newsletter_alert] %>
                          <% flash.each do |name, msg| -%>
                              <div style="color: #FDCB4E" id="flash">
                                <%= content_tag :div, msg, class: 'text-center' %>
                              </div>
                          <% end -%>
                      <% end %>
                    </h1>
                </div>
            </div>
        </div>
    </section>

    <section id="features" class="features">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="section-heading">
                        <h2><%= t('feature_expl') %></h2>
                        <hr>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="feature-item">
                                    <i class="icon-hourglass text-primary"></i>
                                    <h3><%= t('fast') %></h3>
                                    <p class="text-muted"><%= t('fast_expl') %></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="feature-item">
                                    <i class="icon-shield text-primary"></i>
                                    <h3><%= t('secure') %></h3>
                                    <p class="text-muted"><%= t('secure_expl') %></p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="feature-item">
                                    <i class="icon-magic-wand text-primary"></i>
                                    <h3><%= t('specialized') %></h3>
                                    <p class="text-muted"><%= t('specialized_expl') %></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="feature-item">
                                    <i class="icon-directions text-primary"></i>
                                    <h3><%= t('easy') %></h3>
                                    <p class="text-muted"><%= t('easy_expl') %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>

    <section id="contact" class="cta contact-image" style="background-image: url('templates/3/img/handshake2.jpg');">
        <div class="cta-content">
            <div class="container">
                <h2 class="center-sm" style="max-width:760px;"><%= t('dont_wait') %><br><%= t('meet_datlas') %></h2>
                <h4 class="center-sm" style="color: white"><%= t('email_expl') %></h4>
                <%= form_for @newsletter, url: create_newsletter_path, :html => {:multipart => true} do |f| %>
                    <div class="form col-md-6 col-xs-12 row text-center bottom-form">
                      <%= f.email_field :email, class: 'form-control email-input', placeholder: 'abc@def.com', required: true %>
                      <%= f.submit 'Gönder', class: 'btn btn-outline btn-email-submit' %>
                    </div>
                    <br/>
                <% end %>
                <h1>
                  <% if flash[:newsletter_alert] %>
                      <% flash.each do |name, msg| -%>
                          <div style="color: #FDCB4E" id="flash">
                            <%= content_tag :div, msg, class: 'text-center' %>
                          </div>
                      <% end -%>
                  <% end %>
                </h1>
            </div>
        </div>
        <div class="overlay"></div>
    </section>

    <!-- jQuery -->
    <script src="templates/3/vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="templates/3/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Theme JavaScript -->
    <script src="templates/3/js/new-age.min.js"></script>

</body>

</html>
